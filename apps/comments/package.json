{
  "name": "comments-app",
  "version": "1.0.0",
  "description": "Comments API with Prisma and SQLite",
  "main": "server.js",
  "type": "module",
  "imports": {
    "@/*": "./src/*",
    "@constants/*": "./src/constants/*",
    "@utils/*": "./src/utils/*",
    "@services/*": "./src/services/*",
    "@controllers/*": "./src/controllers/*",
    "@middleware/*": "./src/middleware/*",
    "@routes/*": "./src/routes/*",
    "@shared/*": "../../shared/*"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=unit",
    "test:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=integration",
    "test:e2e": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=e2e",
    "setup": "node setup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm exec husky install",
    "postinstall": "pnpm exec prisma generate",
    "docs:generate": "node tools/generate-docs.js",
    "docs:swagger": "node tools/swagger/index.js",
    "docs:postman": "node tools/postman/index.js",
    "docs:watch": "nodemon --watch src --ext js --exec 'npm run docs:generate'",
    "docs:dev": "npm run docs:generate && npm run dev"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "swagger-autogen": "^2.23.6"
  },
  "keywords": [
    "express",
    "comments",
    "api",
    "prisma",
    "sqlite"
  ],
  "author": "",
  "license": "MIT"
}