{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@constants": ["src/constants"],
      "@utils": ["src/utils"],
      "@services": ["src/services"],
      "@controllers": ["src/controllers"],
      "@middleware": ["src/middleware"],
      "@routes": ["src/routes"],
      "@shared": ["../../shared"]
    }
  },
  "include": ["src/**/*", "server.js"],
  "exclude": ["node_modules", "prisma"]
}
