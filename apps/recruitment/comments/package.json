{
  "name": "comments-app",
  "version": "1.0.0",
  "description": "High-performance Comments API built with Fastify, Prisma and SQLite",
  "main": "server.js",
  "type": "module",
  "imports": {
    "@app/*": "./src/*",
    "@app/constants": "./src/constants/index.js",
    "@app/constants/*": "./src/constants/*",
    "@app/utils": "./src/utils/index.js",
    "@app/utils/*": "./src/utils/*",
    "@app/services": "./src/services/index.js",
    "@app/services/*": "./src/services/*",
    "@app/repositories": "./src/repositories/index.js",
    "@app/repositories/*": "./src/repositories/*",
    "@app/controllers": "./src/controllers/index.js",
    "@app/controllers/*": "./src/controllers/*",
    "@app/clients": "./src/clients/index.js",
    "@app/clients/*": "./src/clients/*",
    "@app/middleware": "./src/middleware/index.js",
    "@app/middleware/*": "./src/middleware/*",
    "@app/schemas": "./src/schemas/index.js",
    "@app/schemas/*": "./src/schemas/*",
    "@app/routes": "./src/routes/index.js",
    "@app/routes/*": "./src/routes/*",
    "@app/shared/*": "../../../packages/shared/*"
  },
  "scripts": {
    "start": "node --loader @swc-node/register server.js",
    "dev": "nodemon --exec \"node --loader @swc-node/register\" server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=unit",
    "test:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=integration",
    "test:e2e": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=e2e",
    "setup": "node setup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm exec husky install",
    "postinstall": "pnpm exec prisma generate",
    "docs:generate": "node tools/docs-generator.js",
    "docs:swagger": "node tools/swagger-generator.js",
    "docs:postman": "node tools/postman-generator.js",
    "docs:watch": "nodemon --watch src --ext js --exec 'npm run docs:generate'",
    "docs:dev": "npm run docs:generate && npm run dev"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@prisma/client": "^5.0.0",
    "@shared/core": "workspace:*",
    "bcryptjs": "^2.4.3",
    "fastify": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.25.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.5.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.0",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0"
  },
  "keywords": [
    "fastify",
    "comments",
    "api",
    "prisma",
    "sqlite",
    "json-schema",
    "high-performance"
  ],
  "author": "",
  "license": "MIT"
}
