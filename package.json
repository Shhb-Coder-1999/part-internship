{
  "name": "part-internship-workspace",
  "version": "1.0.0",
  "description": "Monorepo for recruitment, college, and internship projects with shared packages",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:parallel": "pnpm run dev:gateway & pnpm run --parallel --filter=\"apps/*\" dev",
    "dev:gateway": "pnpm --filter gateway-api dev",

    "dev:recruitment": "pnpm --filter \"apps/recruitment/*\" dev",

    "dev:comments": "pnpm --filter comments-app dev",
    "start": "pnpm run start:gateway & pnpm run --parallel --filter=\"apps/*\" start",
    "start:gateway": "pnpm --filter gateway-api start",
    "start:recruitment": "pnpm --filter \"apps/recruitment/*\" start",
    "test": "pnpm run --parallel --filter=\"apps/*\" test",
    "test:recruitment": "pnpm --filter \"apps/recruitment/*\" test",
    "test:performance": "node tools/testing/performance.js",
    "test:property": "node tools/testing/property-based.js",
    "test:load": "autocannon",
    "clean": "pnpm run --parallel clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "setup": "node tools/development/setup.js",
    "setup:basic": "pnpm install",
    "generate": "plop",
    "generate:service": "plop microservice",
    "generate:crud": "plop crud",
    "generate:shared": "plop shared-component",
    "prisma:studio": "node tools/prisma/cli.js studio start",
    "prisma:studio:stop": "node tools/prisma/cli.js studio stop",
    "prisma:generate": "node tools/prisma/cli.js db generate",
    "prisma:push": "node tools/prisma/cli.js db push",
    "prisma:services": "node tools/prisma/cli.js services",
    "prisma:init": "node tools/prisma/cli.js init",
    "dev:info": "node -e \"import('./tools/development/config.js').then(m => new m.default(process.cwd()).printDevInfo())\"",
    "dev:setup": "node tools/development/setup.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "type": "module",
  "devDependencies": {
    "@swc-node/register": "^1.10.10",
    "commander": "^14.0.0",
    "concurrently": "^8.0.0"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "microservices",
    "recruitment",
    "college",
    "internship",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
