# Fastify API Gateway Environment Configuration

# Server Configuration
NODE_ENV=development
GATEWAY_PORT=8080
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Request Limits
MAX_REQUEST_SIZE=10485760

# Service URLs - Update these to match your service ports
COMMENTS_SERVICE_URL=http://localhost:3001
USER_MANAGEMENT_SERVICE_URL=http://localhost:3002
SAHAB_SERVICE_URL=http://localhost:3003
COLLEGE_SERVICE_URL=http://localhost:3004
INTERNSHIP_SERVICE_URL=http://localhost:3005

# Performance Settings
KEEP_ALIVE_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# Development Features
ENABLE_SWAGGER=true
ENABLE_REQUEST_LOGGING=true
