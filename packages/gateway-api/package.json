{
  "name": "gateway-api",
  "version": "1.0.0",
  "description": "API Gateway for routing and authentication across all applications",
  "main": "gateway.js",
  "type": "module",
  "scripts": {
    "start": "node gateway.js",
    "dev": "nodemon gateway.js",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node database/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "setup": "pnpm db:generate && pnpm db:push && pnpm db:seed",
    "postinstall": "pnpm db:generate"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@shared/core": "workspace:*",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^9.0.1",
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.22.0"
  },
  "keywords": [
    "fastify",
    "gateway",
    "api",
    "authentication",
    "routing",
    "proxy",
    "high-performance"
  ],
  "author": "",
  "license": "MIT"
}
