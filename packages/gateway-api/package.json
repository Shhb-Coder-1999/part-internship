{
  "name": "gateway-api",
  "version": "1.0.0",
  "description": "High-performance API Gateway built with Fastify for routing and authentication",
  "main": "gateway.js",
  "type": "module",
  "imports": {
    "@app/*": "./src/*",
    "@app/constants": "./src/constants/index.js",
    "@app/constants/*": "./src/constants/*",
    "@app/utils": "./src/utils/index.js",
    "@app/utils/*": "./src/utils/*",
    "@app/services": "./src/services/index.js",
    "@app/services/*": "./src/services/*",
    "@app/middleware": "./src/middleware/index.js",
    "@app/middleware/*": "./src/middleware/*",
    "@app/schemas": "./src/schemas/index.js",
    "@app/schemas/*": "./src/schemas/*",
    "@app/routes": "./src/routes/index.js",
    "@app/routes/*": "./src/routes/*",
    "@app/shared/*": "../shared/*"
  },
  "scripts": {
    "start": "node --loader @swc-node/register gateway.js",
    "dev": "nodemon --exec \"node --loader @swc-node/register\" gateway.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=unit",
    "test:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=integration",
    "test:e2e": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --testPathPattern=e2e",
    "setup": "node setup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node --loader @swc-node/register prisma/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "pnpm exec husky install",
    "postinstall": "pnpm exec prisma generate",
    "docs:generate": "node tools/generate-docs.js",
    "docs:swagger": "node tools/swagger/index.js",
    "docs:postman": "node tools/postman/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@shared/core": "workspace:*",
    "dotenv": "^16.3.1",
    "fastify": "^5.5.0",
    "uuid": "^9.0.1",
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.25.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.5.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.0",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "keywords": [
    "fastify",
    "gateway",
    "api",
    "authentication",
    "routing",
    "proxy",
    "high-performance"
  ],
  "author": "",
  "license": "MIT"
}
